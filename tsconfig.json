{
    "compilerOptions": {
      "target": "ES6",                      
      "module": "commonjs",                   
      "outDir": "./dist",                     
      "declaration": true,                    
      "declarationDir": "./typings",          
      "sourceMap": true,                      
      "strict": true,                         
      "esModuleInterop": true,                
      "skipLibCheck": true,                   
      "forceConsistentCasingInFileNames": true 
    },
    "include": [
      "src/*.ts"                           
    ],
    "exclude": [
      "node_modules"                          
    ]
  }
  